<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.BookBackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trả Phiếu Mượn Sách"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="16dp" />

        <!-- Mã phiếu mượn -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Phiếu Mượn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp" />

        <EditText
            android:id="@+id/etBorrowingSlipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã phiếu mượn"
            android:background="@drawable/edit_text_background"
            android:inputType="text" />

        <!-- Số lượng trả -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng sách trả"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số lượng"
            android:background="@drawable/edit_text_background"
            android:inputType="text" />

        <!-- Ngày trả -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Trả"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/returnDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:hint="Chọn ngày trả" />

        <!-- Tình trạng sách -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình Trạng Sách"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgBookCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbGoodCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tốt" />

            <RadioButton
                android:id="@+id/rbDamagedCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hư hỏng" />

        </RadioGroup>

        <!-- Ghi chú -->
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi Chú"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ghi chú nếu có"
            android:background="@drawable/edit_text_background"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Nút hoàn tất -->
        <Button
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/btnCompleteReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn Tất"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/baseline_arrow_back_24" />
    </LinearLayout>

</ScrollView>
