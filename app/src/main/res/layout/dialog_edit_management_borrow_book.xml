<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CẬP NHÂT PHIẾU MƯỢN"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20dp"
                android:textColor="@color/colorFab"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn Mã Độc Giả"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn Sách"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Mượn"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <Spinner
                    android:id="@+id/spinnerDayBorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerMonthBorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerYearBorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Hết Hạn"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <Spinner
                    android:id="@+id/spinnerDayPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerMonthPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerYearPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Lượng Mượn"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtSoLuongMuon"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số lượng mượn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi Chú"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtGhiChu"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/edit_text_background"
                android:hint="Nhập ghi chú" />

            <Button
                android:id="@+id/btnEditBorrowBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CẬP NHÂT"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorFab"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>