<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" /> <!-- Màu đỏ đậm khi nhấn -->
            <corners android:radius="12dp" /> <!-- Đặt radius ở đây -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Màu đỏ thông thường -->
            <corners android:radius="12dp" /> <!-- Đặt radius ở đây -->
        </shape>
    </item>
</selector>